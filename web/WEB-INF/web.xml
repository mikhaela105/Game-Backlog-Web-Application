<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GameBacklogServlet</servlet-name>
        <servlet-class>servlets.GameBacklogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveGameServlet</servlet-name>
        <servlet-class>servlets.RemoveGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchBacklogServlet</servlet-name>
        <servlet-class>servlets.SearchBacklogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateGameServlet</servlet-name>
        <servlet-class>servlets.UpdateGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplyGameUpdateServlet</servlet-name>
        <servlet-class>servlets.ApplyGameUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameBacklogServlet</servlet-name>
        <url-pattern>/GameBacklogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveGameServlet</servlet-name>
        <url-pattern>/RemoveGameServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchBacklogServlet</servlet-name>
        <url-pattern>/SearchBacklogServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateGameServlet</servlet-name>
        <url-pattern>/UpdateGameServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplyGameUpdateServlet</servlet-name>
        <url-pattern>/ApplyGameUpdateServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/GamesResource</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
